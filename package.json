{
  "name": "micro-frontend-dashboard",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0",
  "scripts": {
    "dev": "pnpm --filter shell-app dev",
    "build": "pnpm --filter shell-app build",
    "preview": "pnpm --filter shell-app preview",
    "type-check": "pnpm --filter '*' run type-check",
    "lint": "pnpm --filter '*' run lint",
    "clean": "pnpm --filter '*' run clean"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}